<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>

    <id>org.digma.intellij</id>

    <name>Digma</name>
    <vendor>Digma inc todo:full vendor name</vendor>

    <depends>com.intellij.modules.platform</depends>

    <depends
            optional="true"
            config-file="org.digma.intellij-with-python.xml">com.intellij.modules.python</depends>
    <depends
            optional="true"
            config-file="org.digma.intellij-with-java.xml">com.intellij.modules.java</depends>


    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Digma" secondary="true" icon="AllIcons.General.Modified" anchor="left"
                    factoryClass="org.digma.intellij.plugin.toolwindow.DigmaToolWindowFactory"/>
        <projectService serviceImplementation="org.digma.intellij.plugin.service.EditorInteractionService"/>
    </extensions>


    <applicationListeners>
        <listener
                class="org.digma.intellij.plugin.listener.ProjectsListener"
                topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>


</idea-plugin>
